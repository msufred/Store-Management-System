<?import javafx.scene.layout.VBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
         <items>
            <Button mnemonicParsing="false" text="Logout" />
            <Label text="Hello Admin!" />
         </items></ToolBar>
      <HBox spacing="4.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox styleClass="content-pane">
               <children>
                  <ToggleButton fx:id="btnDashboard" mnemonicParsing="false" prefHeight="48.0" prefWidth="250.0" selected="true" text="Summary">
                     <styleClass>
                        <String fx:value="main-toggle" />
                        <String fx:value="main-toggle-v1" />
                     </styleClass>
                  </ToggleButton>
                  <ToggleButton fx:id="btnPayments" mnemonicParsing="false" prefHeight="48.0" prefWidth="250.0" text="Billings">
                     <styleClass>
                        <String fx:value="main-toggle" />
                        <String fx:value="main-toggle-v2" />
                     </styleClass>
                  </ToggleButton>
                  <ToggleButton fx:id="btnSales" mnemonicParsing="false" prefHeight="48.0" prefWidth="250.0" text="Sales">
                     <styleClass>
                        <String fx:value="main-toggle" />
                        <String fx:value="main-toggle-v3" />
                     </styleClass>
                  </ToggleButton>
                  <ToggleButton fx:id="btnCustomers" mnemonicParsing="false" prefHeight="48.0" prefWidth="250.0" text="Accounts">
                     <styleClass>
                        <String fx:value="main-toggle" />
                        <String fx:value="main-toggle-v4" />
                     </styleClass>
                  </ToggleButton>
                  <ToggleButton fx:id="btnReports" mnemonicParsing="false" prefHeight="48.0" prefWidth="250.0" text="Reports">
                     <styleClass>
                        <String fx:value="main-toggle" />
                        <String fx:value="main-toggle-v1" />
                     </styleClass>
                  </ToggleButton>
                  <ToggleButton fx:id="btnTransactions" mnemonicParsing="false" prefHeight="48.0" prefWidth="250.0" text="Transactions">
                     <styleClass>
                        <String fx:value="main-toggle" />
                        <String fx:value="main-toggle-v2" />
                     </styleClass>
                  </ToggleButton>
                  <ToggleButton fx:id="btnInventory" mnemonicParsing="false" prefHeight="48.0" prefWidth="250.0" text="Services &amp; Products">
                     <styleClass>
                        <String fx:value="main-toggle" />
                        <String fx:value="main-toggle-v3" />
                     </styleClass>
                  </ToggleButton>
               </children>
            </VBox>
            <StackPane fx:id="paymentsContentPane" prefHeight="150.0" prefWidth="200.0" styleClass="content-pane" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
   </children>
</VBox>

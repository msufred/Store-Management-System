<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="4.0">
         <children>
            <Button fx:id="btnAdd" mnemonicParsing="false" prefWidth="60.0" text="Add" />
            <Button fx:id="btnEdit" mnemonicParsing="false" prefWidth="60.0" text="Edit" />
            <Button fx:id="btnDelete" mnemonicParsing="false" prefWidth="60.0" text="Delete" />
            <Button fx:id="btnRefresh" mnemonicParsing="false" text="Refresh" />
            <TextField prefWidth="400.0" promptText="Search" />
            <Button mnemonicParsing="false" text="Search" />
            <ComboBox prefHeight="27.0" prefWidth="98.0" promptText="Sort By" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
      <TableView fx:id="accountsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colAccountNo" prefWidth="133.0" text="Account No" />
            <TableColumn fx:id="colFirstName" prefWidth="198.0" text="First Name" />
            <TableColumn fx:id="colLastName" prefWidth="216.0" text="Last Name" />
            <TableColumn fx:id="colAddress" prefWidth="216.0" text="Address" />
            <TableColumn fx:id="colContact" prefWidth="216.0" text="Contact No" />
            <TableColumn fx:id="colDataPlan" prefWidth="124.0" text="Data Plan" />
            <TableColumn fx:id="colStatus" prefWidth="143.0" text="Status" />
        </columns>
      </TableView>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="8.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <Label prefWidth="100.0" text="Item" />
            <ComboBox fx:id="cbItems" prefWidth="200.0" promptText="Select Item" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label prefWidth="100.0" text="Price (php)" />
            <TextField fx:id="tfPrice" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label prefWidth="100.0" text="Quantity" />
            <Spinner fx:id="spQuantity" editable="true" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label prefWidth="100.0" text="Total" />
            <TextField fx:id="tfTotal" editable="false" prefWidth="200.0" />
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" prefWidth="100.0" text="Cancel" />
            <Button fx:id="btnAdd" defaultButton="true" mnemonicParsing="false" prefWidth="100.0" text="Add" />
         </children>
         <VBox.margin>
            <Insets top="32.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="8.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label minWidth="100.0" text="Amount (Php)" />
            <TextField fx:id="tfAmount" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label minWidth="100.0" text="Type" />
            <ChoiceBox fx:id="cbTypes" prefWidth="200.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label minWidth="100.0" text="Date" />
            <DatePicker fx:id="datePicker" prefWidth="200.0" />
         </children>
      </HBox>
      <Label minWidth="100.0" text="Description" />
      <TextArea fx:id="taDescription" prefHeight="100.0" prefWidth="308.0" wrapText="true" />
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="btnAdd" mnemonicParsing="false" text="Add Revenue" />
            <Button fx:id="btnCancel" mnemonicParsing="false" text="Discard" />
         </children>
         <VBox.margin>
            <Insets top="32.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
            <ChoiceBox fx:id="cbSelection" prefWidth="150.0" />
            <Separator orientation="VERTICAL">
               <padding>
                  <Insets left="8.0" right="8.0" />
               </padding>
            </Separator>
          <Button fx:id="btnAdd" mnemonicParsing="false" text="Add" />
            <Button fx:id="btnEdit" disable="true" mnemonicParsing="false" text="Edit" />
            <Button fx:id="btnDelete" disable="true" mnemonicParsing="false" text="Delete" />
            <Button fx:id="btnRefresh" disable="true" mnemonicParsing="false" text="Refresh" />
        </items>
      </ToolBar>
   </children>
</VBox>

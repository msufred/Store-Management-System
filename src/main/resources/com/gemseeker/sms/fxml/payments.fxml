<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="4.0">
         <children>
            <Button fx:id="btnAdd" mnemonicParsing="false" text="Add Billing" />
            <Button fx:id="btnEdit" mnemonicParsing="false" text="Edit" />
            <Button fx:id="btnDelete" mnemonicParsing="false" text="Delete" />
            <Button fx:id="btnRefresh" mnemonicParsing="false" text="Refresh" />
            <Button fx:id="btnRefresh1" mnemonicParsing="false" text="Process" />
            <TextField prefWidth="400.0" />
            <Button mnemonicParsing="false" text="Search" />
            <ComboBox prefHeight="27.0" prefWidth="98.0" promptText="Sort By" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
      <SplitPane dividerPositions="0.6" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <items>
            <TableView fx:id="billingsTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colDateOfBilling" prefWidth="123.0" text="Date of Billing" />
                <TableColumn fx:id="colAccountNo" prefWidth="137.0" text="Account No" />
                  <TableColumn fx:id="colName" prefWidth="175.0" text="Name">
                     <columns>
                        <TableColumn minWidth="30.0" prefWidth="150.0" text="First Name" />
                        <TableColumn prefWidth="150.0" text="Last Name" />
                     </columns>
                  </TableColumn>
                  <TableColumn fx:id="colDueDate" prefWidth="134.0" text="Due Date" />
                  <TableColumn fx:id="colAmount" prefWidth="120.0" text="Amount" />
                  <TableColumn fx:id="colStatus" prefWidth="121.0" text="Status" />
              </columns>
            </TableView>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" />
         </items>
      </SplitPane>
   </children>
</VBox>

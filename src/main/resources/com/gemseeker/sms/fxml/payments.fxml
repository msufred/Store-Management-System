<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="4.0">
         <children>
            <MenuButton mnemonicParsing="false" text="Add Billing">
              <items>
                <MenuItem fx:id="miAddWISPBilling" mnemonicParsing="false" text="WISP Billing" />
                <MenuItem fx:id="miAddItemBilling" mnemonicParsing="false" text="Item Billing" />
              </items>
            </MenuButton>
            <Button fx:id="btnEdit" disable="true" mnemonicParsing="false" text="Edit" />
            <Button fx:id="btnDelete" disable="true" mnemonicParsing="false" text="Delete" />
            <Button fx:id="btnRefresh" mnemonicParsing="false" text="Refresh" />
            <Button fx:id="btnProcess" disable="true" mnemonicParsing="false" text="Process" />
            <TextField prefWidth="400.0" />
            <Button mnemonicParsing="false" text="Search" />
            <ComboBox prefHeight="27.0" prefWidth="98.0" promptText="Sort By" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <items>
            <TableView fx:id="billingsTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colDateOfBilling" prefWidth="123.0" text="Date of Billing" />
                <TableColumn fx:id="colAccountNo" prefWidth="100.0" text="Account No" />
                  <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
                  <TableColumn fx:id="colDueDate" prefWidth="134.0" text="Due Date" />
                  <TableColumn fx:id="colAmount" prefWidth="120.0" text="Amount" />
                  <TableColumn fx:id="colStatus" prefWidth="121.0" text="Status" />
                  <TableColumn fx:id="colType" prefWidth="121.0" text="Billing Type" />
              </columns>
            </TableView>
            <VBox fx:id="vboxDetails" disable="true">
               <children>
                  <ToolBar>
                     <items>
                        <Label text="Details" />
                        <Region prefWidth="16.0" />
                        <Button fx:id="btnAddItem" mnemonicParsing="false" text="Add" />
                        <Button fx:id="btnEditItem" disable="true" mnemonicParsing="false" text="Edit" />
                        <Button fx:id="btnDeleteItem" disable="true" mnemonicParsing="false" text="Delete" />
                     </items>
                  </ToolBar>
                  <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox>
                           <children>
                              <TableView fx:id="paymentsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="colDescription" prefWidth="292.0" text="Description" />
                                  <TableColumn fx:id="colCost" minWidth="0.0" prefWidth="232.0" text="Cost" />
                                    <TableColumn fx:id="colQuantity" prefWidth="193.0" text="Quantity" />
                                    <TableColumn fx:id="colTotal" prefWidth="193.0" text="Total Cost" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                              <HBox alignment="CENTER_RIGHT" spacing="8.0">
                                 <children>
                                    <Label text="Total" />
                                    <TextField fx:id="tfTotal" editable="false" prefWidth="200.0" />
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>

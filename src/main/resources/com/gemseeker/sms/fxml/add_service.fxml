<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="600.0" spacing="8.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="text-title" text="Add Service" />
      <Label text="Service Name" />
      <TextField fx:id="tfName" />
      <Label text="Estimated Price" />
      <TextField fx:id="tfPrice" />
      <Label text="Description (Optional)" />
      <TextArea fx:id="taDesc" prefHeight="100.0" prefWidth="200.0" wrapText="true" />
      <HBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="8.0">
         <children>
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" prefWidth="100.0" text="Cancel" />
            <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false" prefWidth="100.0" text="Save" />
         </children>
         <VBox.margin>
            <Insets top="32.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
